<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/home_fragment_scene">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Unit Conversion"
                android:gravity="center"
                android:textColor="#EAE4E4"
                android:textSize="18sp"
                android:textStyle="bold"></TextView>
        </androidx.appcompat.widget.Toolbar>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:id="@+id/WeightFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:paddingTop="20dp"
                app:srcCompat="@drawable/scales_xxl" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="20dp"
                android:text="Weight"
                android:textColor="@color/design_default_color_error"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-93dp"
                android:layout_marginLeft="-93dp"
                android:layout_marginTop="20dp"
                android:text="Kilograms, Pounds,  Stones, Ounces, Grams"
                android:textSize="12sp" />

        </TableRow>

        <TableRow
            android:id="@+id/SpeedFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="62dp"
                android:layout_height="75dp"
                android:paddingTop="20dp"
                app:srcCompat="@drawable/speed" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="20dp"
            android:text="Speed"
            android:textColor="@color/design_default_color_error"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-93dp"
            android:layout_marginLeft="-93dp"
            android:layout_marginTop="20dp"
            android:text="Metres per Second, MPH, KPH "
            android:textSize="12sp" />
        </TableRow>

        <TableRow
            android:id="@+id/DistanceFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:paddingTop="20dp"
                app:srcCompat="@drawable/distance" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="20dp"
                android:text="Distance"
                android:textColor="@color/design_default_color_error"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-93dp"
                android:layout_marginLeft="-93dp"
                android:layout_marginTop="20dp"
                android:text="Millimetre, Centimetre, Metre, Kilometre"
                android:textSize="12sp" />
        </TableRow>

        <TableRow
            android:id="@+id/TimeFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:paddingTop="20dp"
                app:srcCompat="@drawable/scales_xxl" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="20dp"
                android:text="Time"
                android:textColor="@color/design_default_color_error"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-93dp"
                android:layout_marginLeft="-45dp"
                android:layout_marginTop="20dp"
                android:text="Millisecond, Second, Minute, Hour"
                android:textSize="12sp" />
        </TableRow>

        <TableRow
            android:id="@+id/VolumeFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:paddingTop="20dp"
                app:srcCompat="@drawable/scales_xxl" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="20dp"
                android:text="Volume"
                android:textColor="@color/design_default_color_error"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-93dp"
                android:layout_marginLeft="-45dp"
                android:layout_marginTop="20dp"
                android:text="Litre, Millilitre, Cubic Foot, Imperial Pint"
                android:textSize="12sp" />
        </TableRow>

        <TableRow
            android:id="@+id/TempFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:paddingTop="20dp"
                app:srcCompat="@drawable/scales_xxl" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="20dp"
                android:text="Temperature"
                android:textColor="@color/design_default_color_error"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-93dp"
                android:layout_marginLeft="-45dp"
                android:layout_marginTop="20dp"
                android:text="Kelvin, Celsius, Fahrenheit"
                android:textSize="12sp" />
        </TableRow>

        <TableRow
            android:id="@+id/StorageFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true">


            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:paddingTop="20dp"
                app:srcCompat="@drawable/scales_xxl" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="20dp"
                android:text="Digital Storage"
                android:textColor="@color/design_default_color_error"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-93dp"
                android:layout_marginLeft="-45dp"
                android:layout_marginTop="20dp"
                android:text="Kilobyte, Megabyte, Gigabyte, Terabyte"
                android:textSize="12sp" />
        </TableRow>

    </TableLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>